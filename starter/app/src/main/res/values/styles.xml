<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Add necessary styles -->
    <style name="UpcomingElectionHeader" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/gray50</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ElectionField" parent="Widget.AppCompat.TextView">\
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="link_style">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="election_main_image">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">220dp</item>
    </style>

    <style name="representative_info">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="launch_button_style">
        <item name="android:layout_width">307dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="zip_code_length">
        <item name="android:maxLength">5</item>
    </style>

    <style name="vi_header">
        <item name="android:layout_marginStart">@dimen/medium_space</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/gray50</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="rep_element_style">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">@dimen/medium_space</item>
    </style>

    <style name="rep_pp_size">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:padding">@dimen/small_margin</item>
    </style>

    <style name="rep_item_title">
        <item name="android:padding">@dimen/small_margin</item>
        <item name="android:textColor">@color/gray50</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
